//Best example of inter thread communcation is producer consumer problem

class Q{
	int num;
	public void setQ(int num){
		this.num = num;
		System.out.println("Set: "+num);
	}
	public void getQ(){
		System.out.println("Get: "+num);
	}
}


//thread one
class Producer implements Runnable{
	Q q;
	public Producer(Q q) {
		this.q = q;
		Thread t = new Thread("Producer");
		t.start();
	}
	public void run() {
		int i=0;
		while(true){
			q.setQ(i++);
			try{Thread.sleep(1000);} catch(Exception e){};
		}
	}
}




public class Main {
	public static void main(String[] args) {


	}

}
